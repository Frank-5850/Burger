<div class="row card col-md-12 my-4">
    <h3 class="card-header text-center">Order your favorite burger!</h3>
    <div class="row card-body">
    <img class="col-md-2"src="/assets/images/Burger.png">
    <div class="col-md-10 form-group" id="submitForm">
        <label for="new_burger"></label>
        <input class="form-control" rows="1" id="new_burger" name="burger_name"></input>
        <button id="submit-button" type="submit" class="btn btn-success mx-auto"><i class="fas fa-utensils"></i>  Place an Order!</button> 
    </div>
    </div>
</div>

<div class="row col-md-12">
    <div class="col-md-6">
        <h3 class="card text-center p-1">
            Burgers Ready
        </h3>
            {{#each burgers}}
            {{#unless this.devoured}}
            <h4 class="card mt-3 p-2 text-center">{{burger_name}}
                <button class="btn btn-success mt-2 btn-sm eatButton" data-id="{{id}}" type="submit">EAT IT!</button>
            </h4>
            {{/unless}}
            {{/each}}
    </div>
    <div class="col-md-6">
        <h3 class="card text-center p-1">
            Burgers Eaten
        </h3>
            {{#each burgers}}
            {{#if this.devoured}}
            <h4 class="card mt-3 p-2 text-center">{{burger_name}}
                <button class="btn btn-primary mt-2 btn-sm unEatButton" data-id="{{id}}" type="submit">REORDER!</button>
            </h4>
            {{/if}}
            {{/each}}
    </div>
</div>