<div class="row col-md-12">
    <div class="card my-4">
    <h5 class="card-header text-center">Order your favorite burger!</h5>            
        <div class="card-body">         
            <div class="form-group m-0">
                <label for="new_burger"></label>
                <input class="form-control" rows="1" id="new_burger" name="burger_name"></input>
                <button id="submit-button" type="submit" class="btn btn-success mx-auto mt-4"><i class="fas fa-utensils"></i>  Place an Order!</button> 
            </div>
        </div> 
    </div>    
</div>

<div class="row col-md-12">
    <div class="col-md-6">
        <h3 class="card text-center p-1">
            Burgers Ready
        </h3>
            {{#each burgers}}
            <h4 class="card mt-3 p-2 text-center">{{burger_name}}
                <button class="btn btn-success mt-2 btn-sm eat-button" data-id="{{id}}" type="submit">EAT IT!</button>
            </h4>
            {{/each}}
    </div>
    <div class="col-md-6">
        <h3 class="card text-center p-1">
            Burgers Eaten
        </h3>
            {{#each burgers}}
            <h4 class="card mt-3 p-2 text-center">{{burger_name}}
                <button class="btn btn-success mt-2 btn-sm eat-button" data-id="{{id}}" type="submit">REORDER!</button>
            </h4>
            {{/each}}
    </div>
</div>